{{ form_start(form) }}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


<div class="form-layout">
		<div class="form-outer">
<div class="form-header stuck-header">
	<div class="form-header-inner">
		<div class="left">
			<h3>Votre événement</h3>
		</div>
		<div class="right">
			<div class="buttons">
				{# <a href="/admin-profile-view.html" class="button h-button is-light is-dark-outlined"> #}
					
		
      <button class="button h-button is-light is-dark-outlined">
      <span class="icon">
						<i class="lnir lnir-arrow-left rem-100"></i>
					</span>
      <span>Annuler</span>
      </button>

    		
				</a>
				<button id="save-button" class="button h-button is-primary is-raised">{{ button_label|default('Suivant') }}</button>
			</div>
		</div>
	</div>
</div>
<div
	class="form-body">
	<!--Fieldset-->
	<div class="form-fieldset">
		<div class="columns is-multiline">
			<div class="tabs-wrapper is-slider">
				<div class="tabs-inner" style="margin-left: 360px;">
					<div class="tabs">
						<ul>
							<li data-tab="gratuit-tab" class="is-active">
								<a>
									<span>Gratuit</span>
								</a>
							</li>
							<li data-tab="payant-tab">
								<a>
									<span>Payant</span>
								</a>
							</li>
							<li class="tab-naver"></li>
						</ul>
					</div>
				</div>
                <div class="column is-6">
					<div class="field">
						{{ form_label(form.idCateg, 'Insérer la catégorie de votre événement') }}
						{# <div class="control has-icon"> #}
                        <div class="control">
                            <div class="h-select">
                            {{ form_widget(form.idCateg, {'attr': {'class': 'input', 'placeholder': ''}}) }}
                                <div class="select-icon">
                                    <i data-feather="chevron-down"></i>
                                </div>
                            </div>
                        </div>
                        </div>
				</div>
				<div
					id="gratuit-tab" class="tab-content is-active " >
				</div>

				<div id="payant-tab" class="tab-content">
					<div style="Display:inline-flex">
						<div class="column is-6">

							<div class="field">
								{{ form_label(form.prix, 'Insérer le prix') }}
								{{ form_widget(form.prix, {'attr': {'class': 'input', 'placeholder': ''}}) }}
							</div>
						</div>
						<div class="column is-6">
							<div class="field">
								{{ form_label(form.limiteparticipant, 'Insérer le nombre de tickets') }}
								{{ form_widget(form.limiteparticipant, {'attr': {'class': 'input', 'placeholder': ''}}) }}
							</div>
						</div>

					</div>

				</div>
	
				</div>
				<div class="column is-12">
					<div class="field">
						{{ form_label(form.titre, 'Insérer le titre de votre événement') }}
						{# <div class="control has-icon"> #}
						{{ form_widget(form.titre, {'attr': {'class': 'input', 'placeholder': ''}}) }}
					</div>
				</div>
				<div class="column is-12">
					<div class="field">
						{{ form_label(form.descriptionEv, 'Insérer la description de votre événement') }}
						{# <div class="control has-icon"> #}
						{{ form_widget(form.descriptionEv, {'attr': {'class': 'input', 'placeholder': ''}}) }}
					</div>
				</div>
				
			


			<div
				class="column is-6">
				<!--Pickaday-->
				<div class="field">
                <label>Séléctionner la date de l'événement</label>
                <div class="control has-icon">
						<input name="event_date" id="pickaday-datepicker" class="input" placeholder="selectionner une date">
						<div class="form-icon">
							<i data-feather="calendar"></i>
						</div>
					</div>
				</div>
			</div>

			<div
				class="column is-6">

				<!--Bulma Timerange picker-->
				<div class="field is-bulma-timepicker">
                <label>Séléctionner l'horaire de l'événement</label>
					<div class="control">
						<input name="event_time" id="bulma-datepicker-6" class="input" type="time" data-is-range="true">
					</div>
				</div>
			</div>
            <div class="column is-12">
                <div class="filepond-uploader is-three-grid">
          <div class="control">
              <input type="file" class="filepond" name="filepond" multiple
                  data-allow-reorder="true" data-max-file-size="3MB" data-max-files="8">
          </div>
      </div>
      {# //Instanciate element
      FilePond.create(
          document.querySelector('.filepond-3-grid'),
      ); #}
            </div>

		</div>
	</div>
</div>
	</div>
</div>
{{ form_end(form) }}

