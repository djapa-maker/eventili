{% extends 'baseFront.html.twig'%}
{% block title %}
	<title>Mes événements</title>
{% endblock %}
{% block naver %}
	<div class="naver" style="top:-90px;"></div>
{% endblock %}
{% block PageTitle %}
	<div class="title-wrap">
		<h1 class="title is-4">Mes événements</h1>
	</div>
{% endblock %}
{% block content %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

	<div class="card-grid-toolbar">
		<div class="control has-icon">
			<input class="input custom-text-filter" placeholder="Recherche..." data-filter-target=".column">
			<div class="form-icon">
				<i data-feather="search"></i>
			</div>
		</div>

		<div class="buttons">
			<div class="field h-hidden-mobile">
				<div class="control">
					<div class="h-select">
						<div class="select-box">
							<span>Filtrer par catégorie</span>
						</div>
						<div class="select-icon">
							<i data-feather="chevron-down"></i>
						</div>
						<div class="select-drop has-slimscroll-sm">
							<div class="drop-inner">
								{% for Categ in Categ %}
									<div class="option-row">
										<input type="radio" name="posts_filter">
										<div class="option-meta">
											<span>{{Categ.type}}</span>
										</div>
									</div>
								{% endfor %}
							</div>
						</div>
					</div>
				</div>
			</div>
			<a href="{{ path('app_evenement_new') }}">
				<button class="button h-button is-primary is-raised">
					<span class="icon">
						<i aria-hidden="true" class="fas fa-plus"></i>
					</span>
					<span>Créer un événement</span>
				</button>
			</a>
		</div>
	</div>
	<div class="page-content-inner">
		<div class="columns is-multiline">
			<section class="articles">
				{% for event in evenements %}
					<div class="column is-16">
						<article>

							<a href="###">

								<div>
									<figure>
										{% if Img[event.idEv]|length > 0 %}
											<img src="http://localhost/img/{{ asset(Img[event.idEv][0].imagee) }}" alt=""/>
										{% else %}
											<img src="https://picsum.photos/id/1011/800/450" alt=""/>
										{% endif %}
										<div class="figLabel">
											{% if event.prix == 0 %}
												{{ event.type }}
											{% else %}
												{{ event.prix ~" DT" }}
											{% endif %}
										</div>
										<figcaption>
											<div class="card">
												<div class="month-container">
													<div class="month">{{event.dateDebut | date('F')}}</div>
												</div>
												<div class="day">{{event.dateDebut | date('D')}}</div>
												<div class="date">{{event.dateDebut | date('d')}}</div>
												<div class="year">{{event.dateDebut | date('Y')}}</div>
											</div>
										</figcaption>
									</figure>
									<div class="article-body">
										<h2>{{event.titre}}</h2>
										<p style="font-size: small;">{{ event.descriptionEv|slice(0, 170) ~ (event.descriptionEv|length > 190 ? '...' : '') }}</p>
									</div>
								</div>
							</a>
							<div class="media-flex Threedots">
								<div class="flex-end">
									<div class="dropdown is-spaced is-dots is-right dropdown-trigger end-action">
										<div class="is-trigger" aria-haspopup="true">
											<i data-feather="more-vertical"></i>
										</div>
										<div class="dropdown-menu" role="menu" style="position: absolute; top: 100%; right: 0;">
											<div class="dropdown-content">
												<a href="#" class="dropdown-item is-media">
													<div class="icon">
														<i class="lnil lnil-pencil"></i>
													</div>
													<div class="meta">
														<span>Modifier</span>
													</div>
												</a>
												<hr class="dropdown-divider">
												<form method="post" action="{{ path('app_evenement_delete', {'idEv': event.idEv}) }}">
													<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.idEv) }}">
													<button type="submit" style="background-color:#ff8601;color:white" class="btn">Supprimer</button>
												</form>
												{# <a href="{{path('app_evenement_delete',{'idEv':event.idEv}) }}" method="post" class="dropdown-item is-media">
																									<div class="icon">
																										<i class="lnil lnil-trash-can-alt-1"></i>
																									</div>
																									<div class="meta">
																										<span>Supprimer</span>
																									</div>
																								</a> #}
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="button-container">
								<a href="##" class="button h-button is-primary is-rounded">Publier</a>
							</div>
						</article>
					</div>

				{% else %}
					<!--List Empty Placeholder -->
					<div class="page-placeholder custom-text-filter-placeholder is-hidden">
						<div class="placeholder-content">
							<img class="light-image" src="../assets/img/illustrations/placeholders/search-4.svg" alt=""/>
							<img class="dark-image" src="../assets/img/illustrations/placeholders/search-4-dark.svg" alt=""/>
							<h3>Vous n'avez pas encore d'événement.</h3>
							<p class="is-larger">Commencez par en créer un maintenant.</p>
						</div>
					</div>
				{% endfor %}
			</section>
		</div>

	</div>

	<script>
		console.log("Hello, world!");
	</script>


{% endblock %}
