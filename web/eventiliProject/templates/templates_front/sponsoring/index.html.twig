}</style><!-- Charts js --><!--Forms--><!--Wizard--><!-- Layouts js --></body></html><script>
const customAmountInput = document.getElementById('custom-amount-input');
const radioPills = document.querySelectorAll('.radio-pill');
const amountSpans = document.querySelectorAll('.radio-pill-inner span');
const amountLabel = document.getElementById('amount-label'); // add this line

radioPills.forEach((radio, index) => {
radio.addEventListener('change', () => {
let amount = amountSpans[index].textContent.replace('$', '');
customAmountInput.value = amount * 15;
amountLabel.value = amount; // add this line
});
});
const debutInput = document.getElementById("date-debut-input");
const finInput = document.getElementById("date-fin-input");
const saveButton = document.getElementById("save-button");
const warningMessage = document.getElementById("warning-message");

debutInput.addEventListener("change", validateDates);
finInput.addEventListener("change", validateDates);

function validateDates() {
const debutDate = new Date(debutInput.value);
const finDate = new Date(finInput.value);

if (debutDate >= new Date() && debutDate <= finDate) {
saveButton.disabled = false;
warningMessage.style.display = "none";
} else {
saveButton.disabled = true;
warningMessage.style.display = "block";
}
}</script>
