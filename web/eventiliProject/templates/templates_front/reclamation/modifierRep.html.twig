{% extends 'baseFront.html.twig'%}
{% block content %}
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <a class="btn btn-outline-dark" href="{{ path('app_reclamation_user_consulter',{ 'idRec': rep.rec.idRec }) }}">Retour</a>
                <form method="post" action="{{ path('app_reclamation_user_deleteRep', {'idRep': rep.idRep}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rep.idRep) }}" />
                    <button class="btn btn-outline-danger">Supprimer</button>
                </form>
            </div>
            <div class="d-flex flex-row justify-content-center">
                {{ form_start(form) }}
                <h5 class="text-secondary">Modifier/Supprimer un Message</h5>
                {{ form_widget(form._token) }}
                {{ form_row(form.message) }}
                    <button class="btn btn-outline-success">Confimer Modification</button>
                {{ form_end(form)}}
            </div>
        </div>
    </div>

{% endblock %}