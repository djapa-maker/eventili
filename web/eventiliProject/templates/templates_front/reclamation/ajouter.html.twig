{% extends 'baseFront.html.twig'%}
{% block content %}
    <script src="https://www.google.com/recaptcha/api.js?render=6LeJNsAlAAAAAAYz1Jzw_VEnzp5Hm76SCs1EEU8R>"></script>
    <script>
        const siteKey = '6LeJNsAlAAAAAAYz1Jzw_VEnzp5Hm76SCs1EEU8R';

        //either on page load
        grecaptcha.ready(function() {
            grecaptcha.execute(siteKey, {
                action: 'homepage'
            }).then(function(token) {
                //the token will be sent on form submit
                $('[name="captcha"]').val(token);
                //keep in mind that token expires in 120 seconds so it's better to add setTimeout.
            });
        });
    </script>
    <a class="button h-button is-secondary is-bold is-outlined m-2" href="{{ path('app_reclamation_user_index') }}">Retour</a>
    <div class="card">
        <div class="card-content">
            <h2 class="title is-bold is-muted-grey">Nouvelle RÃ©clamation</h2>
            {{ form_start(form) }}
                {{ form_widget(form._token) }}
                {{ form_row(form.titre) }}
                {{ form_row(form.description) }}
                {{ form_widget(form.captcha) }}
                <button class="button h-button is-success is-bold is-outlined m-2">Nouvelle Reclamation</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}