				{{ form_label(form.idService, 'Services', {'label_attr': {'class': 'form-label'}}) }}
			</div>
			<div style="width:39%">
				{{ form_widget(form.idService, {'attr': {'class': 'form-control', 'placeholder': 'description'}}) }}
