{% extends 'baseAdmin.html.twig'%}
{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form._token) }}
    <div class="d-flex flex-row mb-2 justify-content-between">
        <a class="btn btn-dark" href="{{ path('app_reclamation_admin_consulter' , {'idRec': reclamation.idRec}) }}">Retour</a>
        {{ form_row(form.status, {'attr': {'class': 'form form-control form-text'}}) }}
    </div>
    <div class="d-flex flex-row-reverse ">
    </div>
    <div class="card container-fluid" style="height: 75vh;">

        <div class="card-body row text-center gap-5">
            <div class="card col-md-5">
                <div class="card-header align-items-center">
                    {{ form_row(form.titre, {'attr': {'class': 'form form-control form-text'}}) }}
                </div>
                <div class="card-body">
                        {{ form_row(form.description, {'attr': {'class': 'text-white row mb-2 bg-secondary','style': 'border:0;width: 35%; padding: 2%; padding-left: 8%; border-radius: 16px;margin-left: 2%'}}) }}
                    <small style="margin-left: 2%;">ce champs est modifiable</small>
                </div>
                <div class="card-footer bg-white">
                    <div class="row gap-1">
                        <input type="text" name="disabledInput" class="form-control form-text w-75" disabled style="width: 75%"/>
                        <a class="btn btn-outline-success col w-25 disabled">Send</a>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
            <div class="card row"  style="height: 13em;">
                <div class="card-body d-flex flex-column justify-content-left">
                    <div class="d-flex flex-row justify-content-left">
                        <h6 class="col-2 p-2">User</h6>
                        {{ form_row(form.userid, {'attr': {'class': 'form form-control col-12'} }) }}
                    </div>
                    <div class="d-flex flex-row justify-content-left">
                        <h6 class="col-2 p-2">Date</h6>
                        {{ form_row(form.dateheure, {'attr': {'class': 'form form-control form-control-sm'}}) }}
                    </div>
                </div>
            </div>
            <div class="card row">
                <div class="card-body d-flex flex-row gap-1 justify-content-center">
                    <button class="btn btn-outline-success">Confirmer Modification</button>
                </div>
            </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
