{% extends 'baseAdmin.html.twig'%}
{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form._token) }}
    <div class="d-flex flex-row mb-2 justify-content-between">
        <a class="btn btn-dark" href="{{ path('app_reclamation_admin_consulter' , {'idRec': reclamation.idRec}) }}">Retour</a>
        {{ form_row(form.status, {'attr': {'class': 'form form-control form-text'}}) }}
    </div>
    <div class="card">
        <div class="card-body">
            <div class=" d-flex flex-row justify-content-around">
            <div class="d-flex flex-column">
                <div class="d-flex flex-row justify-content-left">
                    <h5 class="p-2 text-center">Sujet</h5>
                    {{ form_row(form.titre, {'attr': {'class': 'form form-control form-text col-9'}}) }}
                </div>
                <div class="d-flex flex-row justify-content-left">
                    <h5 class="p-2 text-center">Contenu</h5>
                    {{ form_row(form.description, {'attr': {'class': 'form form-control form-text col-9'}}) }}
                </div>
            </div>
            <div class="d-flex flex-column">
            <div class="d-flex flex-row justify-content-left">
                <h5 class="p-2">User</h5>
                {{ form_row(form.userid, {'attr': {'class': 'form form-control col-12'} }) }}
            </div>
            <div class="d-flex flex-row justify-content-left">
                <h6 class="p-2">Date</h6>
                {{ form_row(form.dateheure, {'attr': {'class': 'form form-control form-control-sm'}}) }}
            </div>
            </div>

            </div>
            <div class="card row mt-5">
                <div class="card-body d-flex flex-row gap-1 justify-content-center">
                    <button class="btn btn-outline-success">Confirmer Modification</button>
                </div>
            </div>
        </div>

    </div>
    {{ form_end(form) }}
{% endblock %}
