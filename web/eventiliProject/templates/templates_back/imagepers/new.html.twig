		function afficherImage() {
			// Récupération de l'élément input
			var input = document.getElementById('inputImage');
			
			// Vérification qu'un fichier a été sélectionné
			if (input.files && input.files[0]) {
				// Création d'un objet FileReader
				var reader = new FileReader();
				
				// Fonction de rappel appelée lorsque la lecture est terminée
				reader.onload = function(e) {
					// Création d'un élément img
					var img = document.createElement('img');
					
					// Attribution de l'image à l'élément img
					img.src = e.target.result;
					
					// Affichage de l'élément img dans la divImage
					var divImage = document.getElementById('divImage');
					divImage.innerHTML = '';
					divImage.appendChild(img);
				}
				
				// Lecture du fichier sélectionné
				reader.readAsDataURL(input.files[0]);
			}
		}
	</script>

	
	

