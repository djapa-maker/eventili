<a class="btn" data-bs-toggle="modal" data-bs-target="#showModal{{sousservices.id}}" style="
									margin-left:5px;
									border-radius:30px;
									background-color:#27187f;
									border-color:#27187f;
									height:30px;
									width:30px;
									display: flex;
									justify-content: center;
									align-items: center;
									color:white">
	<i style="margin-left:5px" class='bx bx-info-circle'></i>
</a>
{# ------------------------------------------------------------------------------------------- #}
<div class="modal fade" id="showModal{{sousservices.id}}" tabindex="-1" aria-labelledby="showModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header  text-white" style="background-color:#27187f;">
				<br>
				<h5 class="modal-title" id="deleteModalLabel" style="color:white">{{ sousservices.nom }}</h5>
				<button style="color:white" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="col">
					<div class="card">
						<div class="card-body">
							<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
								<div class="carousel-inner">
									{% for n in firstimg %}
										{% if n.sousService.id == sousservices.id %}
											<div class="carousel-item active">
												<img src="http://localhost/img/{{n.img}}" class="d-block" width="500" height="300">
											</div>
										{% endif %}
									{% endfor %}
									{% for i in imagess %}
										{% if i.sousService.id == sousservices.id %}
											{% if not firstimg %}
												<div class="carousel-item">
													<img src="http://localhost/img/{{i.img}}" class="d-block "width="500" height="300" alt="...">
												</div>
											{% endif %}
											{% set firstimg = false %}
										{% endif %}
									{% endfor %}
								</div>
							</div>
						</div>
					</div>
				</div>
				{# ------------------------------------------------------------------------------------------- #}
				<div class="card-body">
					<label style="font-size:20px;color:#ff8601">Description :</label>
					<table>
						<tr>
							<p style="font-size:12px;word-break: break-all;word-break: break-word;white-space: pre-line;">{{ sousservices.description}}</p>
						</tr>
					</table>
					<hr>
					{# ------------------------------------------------------------------------------------------- #}
					<div class="row">
						<div class="col text-center">
							<div style="color:#ff8601">
								<i class="bx bx-money"></i>
								Prix:
							</div>
							<div>{{sousservices.prix}}
								Dt
							</div>
						</div>
						<div class="col text-center">
							<div style="color:#ff8601">
								<i class="bx bx-user"></i>
								Prestataire :
							</div>
							<div>{{sousservices.idPers.prenomPers}}
								{{sousservices.idPers.nomPers}}
							</div>
						</div>
						<div class="col text-center">
							<div style="color:#ff8601">
								<i class="bx bx-donate-heart"></i>Service :
							</div>
							<div>{{sousservices.idService.nom}}
							</div>
						</div>
					</div>
					{# ------------------------------------------------------------------------------------------- #}
					<hr>
					{# ------------------------------------------------------------------------------------------- #}
					<div class="row">
						<div class="col text-center">
							<div style="color:#ff8601">Catégories d'événement:
							</div>

							<div>{{sousservices.idEventcateg}}
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
