	<h6 class="mb-0 text-uppercase">DataTable Example</h6>
	<button type="button" style="margin-left: 1510px;" class="btn btn-primary" onclick="window.location.href='{{ path('app_personne_new') }}'">+</button>


	<hr/>

	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
				<table id="example" class="table table-striped table-bordered" style="width:100%">
					<thead>
						<tr>

							<th>Nom</th>
							<th>Prénom</th>
							<th>Numéro</th>
							<th>Email</th>
							<th>Adresse</th>
							<th>Rib</th>
							<th>Role</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for personne in personnes %}

							<tr>
								<td>{{ personne.nomPers }}</td>
								<td>{{ personne.prenomPers }}</td>
								<td>{{ personne.numTel }}</td>
								<td>{{ personne.email }}</td>
								<td>{{ personne.adresse }}</td>
								<td>{{ personne.rib }}</td>
								<td>{{ personne.role }}</td>
								<td>
									{{ include('templates_back/personne/_delete_form.html.twig', {'button_label': 'Supprimer'}) }}
									<button type="button" class="btn btn-success" onclick="window.location.href='{{ path('app_personne_edit', {'idPers': personne.idPers}) }}'">Modifier</button>

								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="11">no records found</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
			</div>

		</div>
	</div>
{% endblock %}
